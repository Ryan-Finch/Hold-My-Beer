<%- include('../partials/header') %> 

<div id="user-page">
    <div id="profile-container">
        <div>
            <%= user.name %>
        </div>
        <img src="<%= user.avatar%>" alt="">
        <br>
        <div>
            <%= user.email%>
        </div>
    <%if(user.bio){%>
        <div>
            <%= user.bio%>
            <form action="/users/<%= user.id%>">
                <button type="submit">Update</button>
            </form>
        </div>
        <%}else{%>
            <form action="/users/<%= user.id%>?_method=PUT" method="POST">
                <textarea name="bio" id="" cols="15" rows="2">Add a bio..</textarea>
                <input type="submit" value="submit">
            </form>
        <%}%>
    </div> 



  <%if(recipes.length){%>
    <div id="user-recipe-container">
        <div id="user-recipe-title">
            <p>Your Recipes</p>
        </div>
    <div id="user-box">
        <% recipes.forEach(function(r){ %>
        <div id="user-recipe-card">
            <div id="card-name">
                <p><%=r.name%></p>
            </div>
            <form action="/recipes/<%= r.id%>?_method=DELETE" method="POST">
                <label for="">
                    <button type="submit">Delete</button> 
                </label>    
            </form>
            <form action="/recipes/<%= r.id%>" method="GET">
                <input type="hidden">
                <button type="submit" value="Update">View</button>
            </form>
        </div> 
        <%})%>
    </div> 
    </div>
</div>
<%}else{%>
    <h4>Lets get brewing</h4>
    <%}%>
<%- include('../partials/footer') %>